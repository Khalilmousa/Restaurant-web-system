@{
}
<!DOCTYPE html>
<html>
<head>


</head>
<body>
    <div class="row">
        <div>
            <div class="text-center">
                <h2 class="ADD">ADD Event</h2>
                <p class="add">you can add event easily !</p>
            </div>

            <form class="offset-4" method="POST" asp-action="Add" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input asp-for="Title" type="text" class="form-control form-control-a w-50" placeholder="Enter Title">
                </div>

                <div class="mb-3">
                    <label class="form-label">Price</label>
                    <input asp-for="Price" type="number" class="form-control form-control-a w-50" placeholder="Enter Price">
                </div>

                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <input asp-for="Des" type="text" class="form-control form-control-a w-50" placeholder="Enter Description">
                </div>
                <div class="mb-3">
                    <label asp-for="EventDate"></label>
                    <input type="text" asp-for="EventDate" autocomplete="off" class="form-control form-control-a w-50 datepicker" placeholder="Enter Date"/>
                </div>

                <label class="form-label">Select img</label>
                <div class="input-group w-50 mb-3">
                    <input asp-for="Image" type="file" class="form-control form-control-a">
                </div>
                <input type="submit" class="btn btn-Sumbit mt-5 w-50" value="Add Event" />
            </form>
        </div>
    </div>

    <div>
        <img class="img-fluid w-100" src="~/img/footer.png" alt="">
    </div>

</body>
</html>
@section Styles{
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:ital,wght@0,200;1,200&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        body {
            background-color: #093545;
            overflow-x: hidden;
            font-family: 'IBM Plex Sans', sans-serif;
        }

        .ADD {
            color: #FFFFFF;
            font-size: 50px;
            font-weight: bold;
            padding-top: 50px;
        }

        .add, label {
            color: #FFFFFF;
            font-size: 20px;
        }

        .form-control-a {
            background-color: #224957;
            border-color: #224957;
        }

        ::placeholder .form-control {
            color: white;
        }

        .btn-Sumbit {
            background-color: #20DF7F;
            color: white;
            font-size: 20px;
        }
    </style>
}
    @section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function() {
            $('.datepicker').datepicker({
                orientation: "bottom",
                format: "dd/mm/yyyy"
            });
        });
    </script>
}